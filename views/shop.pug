extends layouts/main-layouts.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")


block content 
    main
        if prods.length > 0
                    .grid
                        each product in prods
                            article.card.product-item
                                header.card__header
                                    h1.product__title #{product.title}
                                div.card__image
                                    img(src="https://images.unsplash.com/photo-1592496431122-2349e0fbc666?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8Ym9vayUyMGNvdmVyfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=700&q=60", alt="A Book")
                                div.card__content
                                    h2.product__price $19.99
                                    p.product__description A very interesting book about so many even more interesting things!
                                div.card__actions
                                    button.btn Add to Cart
        else 
            h1 No Products
        


